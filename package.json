{
  "name": "vercel-url",
  "version": "0.3.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "description": "Helper for resolving the active url at buildtime for local and Vercel deployments using Vercel's system environment variables.",
  "repository": {
    "type": "git",
    "url": "https://github.com/markeljan/vercel-url.git"
  },
  "keywords": [
    "vercel",
    "vercel-url",
    "vercel-deployment-url",
    "deployment-url",
    "buildtime-url"
  ],
  "author": "Markeljan Sokoli",
  "license": "MIT",
  "scripts": {
    "lint": "ultracite check",
    "format": "ultracite fix",
    "build:types": "tsc",
    "build": "bun build --target=node ./src/index.ts --outfile=dist/index.js && bun run build:types",
    "prepublishOnly": "bun run build",
    "prepare": "bunx lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^20",
    "lefthook": "^2.0.15",
    "typescript": "^5",
    "ultracite": "7.0.11"
  }
}
